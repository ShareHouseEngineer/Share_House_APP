<div class="container-fluid bg-secondary">
  <div class="row justify-content-center py-4">
    <% @photos.each do |photo| %>
      <div class="card col-md-4 m-2" style="max-width: 25rem;">
        <%= image_tag photo.image %>
          <div class="card-body">
            <h4 class="card-title"><%= photo.created_at.strftime('%Y/%m/%d') %></h4>
            <label for="card-subtitle"><%= photo.user.name %></label><br>
            <%= link_to '詳しく見る', photo_path(photo.label), class: 'btn btn-primary'%>
          </div>
      </div>
    <% end %>
  </div>
</div>